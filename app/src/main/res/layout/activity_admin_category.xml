<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7F3B9"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="ADD NEW PRODUCT"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear1_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vegetatbles_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vegetables"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fruits_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fruits"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/linear1_category_layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/grains_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/grains"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edable_handmade_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/edable_homemade"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linear2_category_layout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/handmade_product_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/handmade"
            />


    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/check_orders_btn"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#6A4CAF50"
        android:textColor="@color/white"
        android:text="Maintain Products"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#6A4CAF50"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Check new orders"
        android:textSize="23sp"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#6A4CAF50"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Logout"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>