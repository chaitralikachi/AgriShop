<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relative123"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET PASSWORD"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_phone_number"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/relative123"/>

    <TextView
        android:id="@+id/tittle_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_phone_number"
        android:text="Answer the Following Security Questions :"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#FF5722"
        android:textSize="22sp"
        android:layout_marginTop="70dp"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What your bestfriend's name?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/tittle_question"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your school name"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/question_1"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:backgroundTint="#B94CAF50"
        android:padding="10dp"
        android:layout_margin="25dp"
        android:layout_below="@+id/question_2"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

</RelativeLayout>